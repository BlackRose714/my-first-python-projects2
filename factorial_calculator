while True:
    factorial = 1
    sayi = int(input("Please enter a non-negative number:"))
    # Lütfen negatif olmayan bir sayı giriniz:

    if sayi < 0:
        print("Please enter a non-negative number.")
        # Lütfen negatif olmayan bir sayı giriniz.
    else:
        for i in range(1, sayi + 1):
            factorial *= i
        if sayi == 0:
            faktorial = 1
        print("Factorial:", faktorial)
        # Faktorial: 
        break
